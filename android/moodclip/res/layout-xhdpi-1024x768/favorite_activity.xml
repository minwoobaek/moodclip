<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:facebook="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:orientation="vertical"
    tools:context=".FavoriteActivity" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="139px"
        android:orientation="vertical" >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.5" />

        <ImageView
            android:layout_width="143px"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_marginLeft="33px"
            android:background="@drawable/my_page" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.5" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="320px"
        android:orientation="horizontal" >

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="4"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_gravity="center"
                android:layout_weight="7"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="146px"
                    android:layout_height="match_parent" />

                <LinearLayout
                    android:layout_width="193px"
                    android:layout_height="match_parent"
                    android:orientation="vertical" >

                    

                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="193px"
                        android:layout_gravity="center"
                        android:gravity="center_horizontal" >

                        <com.facebook.widget.ProfilePictureView
                            android:id="@+id/profilePicture"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
            				android:scaleType="fitXY"
                            android:layout_gravity="center" />

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
            				android:scaleType="fitXY"
                            android:layout_gravity="center"
                            android:src="@drawable/miniprofile_cover" />
                    </FrameLayout>

                    <TextView
                        android:id="@+id/profileName"
                        android:layout_width="wrap_content"
                        android:layout_height="0dp"
                        android:layout_weight="3.5"
                        android:layout_gravity="center"
                        android:textSize="8.5pt"
            			android:textStyle="bold"
            			android:textColor="#676566" />
                </LinearLayout>

                <TextView
                    android:layout_width="124px"
                    android:layout_height="match_parent" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="33px"
                android:orientation="horizontal" >

                <ImageView
                    android:layout_width="120px"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="33px"
                    android:background="@drawable/my_clip" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.86"
            android:orientation="vertical" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1.63" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:src="@drawable/favorite_emtion" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="2.23"
                android:orientation="vertical" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_weight="1" />

                <ImageView
                    android:id="@+id/FavoriteEmotion"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="7.25"
                    android:gravity="center" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_weight="2.25" />
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1.21" />

            <ImageView
                android:id="@+id/friendsBtn"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1.05"
                android:src="@drawable/friends_list_btn_sel" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1.31" />
        </LinearLayout>

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1" />
    </LinearLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/my_clip_bar" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="558px"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1" />

        <GridView
            android:id="@+id/FavoriteGridview"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="46"
            android:numColumns="2" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1" />
    </LinearLayout>

</LinearLayout>