<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:facebook="http://schemas.android.com/apk/res-auto"
    android:id="@+id/LinearLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/img_moodclip_background"
    android:orientation="vertical"
    tools:context=".MoodClip_main_ActivityMain" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical" >

        <ImageView
            android:id="@+id/MainMenu"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="2.5"
            android:layout_gravity="right"
            android:background="@drawable/menu" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_gravity="center"
            android:layout_weight="6.3"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1" />

            <FrameLayout
                android:id="@+id/MiniProfileLayout"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_weight="1.08"
                android:gravity="center_horizontal" >

                <com.facebook.widget.ProfilePictureView
                    android:id="@+id/MiniProfile_picture"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
           			android:scaleType="fitXY"
                    android:layout_gravity="center" />

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
           			android:scaleType="fitXY"
                    android:layout_gravity="center"
                    android:src="@drawable/miniprofile_cover" />

            </FrameLayout>

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1" />
        </LinearLayout>

        <TextView
            android:id="@+id/MiniProfile_name"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_gravity="center"
            android:layout_weight="4"
            android:textSize="8.5pt"
            android:textStyle="bold"
            android:textColor="#676566"/>

    </LinearLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.2" >

        <LinearLayout
            android:id="@+id/MainBtnLay"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1" >

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_weight="1" >
                </TextView>

                <ImageView
                    android:id="@+id/btn_moodclip_main_activitymain_funny"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.88"
                    android:src="@drawable/btn_moodclip_main_activitymain_funny" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_weight="1.26" >
                </TextView>

                <ImageView
                    android:id="@+id/btn_moodclip_main_activitymain_amazing"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.88"
                    android:src="@drawable/btn_moodclip_main_activitymain_amazing" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_weight="1.26" >
                </TextView>

                <ImageView
                    android:id="@+id/btn_moodclip_main_activitymain_cute"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.88"
                    android:src="@drawable/btn_moodclip_main_activitymain_cute" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_weight="1" >
                </TextView>
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_gravity="center"
                android:layout_weight="0.291" >
            </TextView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1" >

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_weight="1" >
                </TextView>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.88"
                    android:orientation="vertical" >

                    <ImageView
                        android:id="@+id/btn_moodclip_main_activitymain_crazy"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/btn_moodclip_main_activitymain_crazy" />
                </LinearLayout>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_weight="1.06" >
                </TextView>

                <LinearLayout
                    android:id="@+id/linearlayout_moodclip_main_activitymain_drop"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center|top"
                    android:layout_weight="2.28"
                    android:gravity="center|top"
                    android:orientation="vertical" >

                    <ImageView
                        android:id="@+id/imageView2"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center|top"
                        android:gravity="center|top"
                        android:src="@drawable/img_moodclip_main_actvitymain_enter" />
                </LinearLayout>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_weight="1.06" >
                </TextView>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.88"
                    android:orientation="vertical" >

                    <ImageView
                        android:id="@+id/btn_moodclip_main_activitymain_fear"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/btn_moodclip_main_activitymain_fear" />
                </LinearLayout>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_weight="1" >
                </TextView>
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_gravity="center"
                android:layout_weight="0.291" >
            </TextView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1" >

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_weight="1" >
                </TextView>

                <ImageView
                    android:id="@+id/btn_moodclip_main_activitymain_sexy"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.88"
                    android:src="@drawable/btn_moodclip_main_activitymain_sexy" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_weight="1.26" >
                </TextView>

                <ImageView
                    android:id="@+id/btn_moodclip_main_activitymain_exciting"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.88"
                    android:src="@drawable/btn_moodclip_main_activitymain_exciting" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_weight="1.26" >
                </TextView>

                <ImageView
                    android:id="@+id/btn_moodclip_main_activitymain_impressive"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.88"
                    android:src="@drawable/btn_moodclip_main_activitymain_impressive" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_weight="1" >
                </TextView>
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_gravity="center"
                android:layout_weight="0.35" >
            </TextView>
        </LinearLayout>
    </FrameLayout>

</LinearLayout>